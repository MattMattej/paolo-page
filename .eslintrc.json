{
  "extends": "next/core-web-vitals",
  "rules": {
    "quotes": ["error", "single", { "avoidEscape": true }], // Usar comillas simples en todo
    "jsx-quotes": ["error", "prefer-single"], // Usar comillas simples en JSX tambi√©n
    "react/no-unescaped-entities": "off",
    "@next/next/no-img-element": "warn"
  },
  "overrides": [
    {
      "files": ["*.js", "*.jsx"],  // Aplicar reglas de comillas a todos los archivos JS y JSX
      "rules": {
        "quotes": ["error", "single", { "avoidEscape": true }],
        "jsx-quotes": ["error", "prefer-single"]
      }
    }
  ]
}
